{
  // Rozšíření základních pravidel ESLintu a dalších pluginů
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  // Nastavení parseru pro TypeScript
  "parser": "@typescript-eslint/parser",
  // Definování použitých pluginů
  "plugins": ["@typescript-eslint"],
  // Vlastní pravidla pro lintování
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  // Odebrání zastaralých možností
  // "useEslintrc": false,
  // "extensions": [".js", ".jsx", ".ts", ".tsx"],
  // "resolvePluginsRelativeTo": "__dirname",
  // "rulePaths": ["./rules"],
  // "ignorePath": ".eslintignore",
  // "reportUnusedDisableDirectives": true,

  // Přidání nových konfiguračních možností
  "overrideConfig": {
    "linterOptions": {
      "reportUnusedDisableDirectives": true
    }
  }
}
